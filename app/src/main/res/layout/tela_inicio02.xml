<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:backgroundTint="@color/darkblue"
        android:drawableStart="@drawable/icon_localizacao"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="92dp" />


    <ImageButton
        android:id="@+id/btn_add_denuncia"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_add_denuncia" />

    <ImageButton
        android:id="@+id/btn_ligar"
        android:layout_width="60dp"
        android:layout_height="60sp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_ligar" />

    <ImageButton
        android:id="@+id/btn_mapa"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_denuncia"
        app:layout_constraintStart_toEndOf="@+id/btn_ligar"
        app:srcCompat="@drawable/btn_mapa" />



</androidx.constraintlayout.widget.ConstraintLayout>
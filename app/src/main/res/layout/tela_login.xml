<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue">

    <Button
        android:id="@+id/btn_sitegov"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:drawableEnd="@drawable/logo_gov"
        android:drawablePadding="0dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/btn_logingov"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_primeirocadastro"
        app:layout_constraintStart_toStartOf="@+id/btn_primeirocadastro"
        tools:layout_editor_absoluteY="517dp" />

    <Button
        android:id="@+id/btn_primeirocadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:text="@string/btn_cadastro"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="569dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="287dp"
        android:layout_height="148dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_sitegov"
        app:layout_constraintStart_toStartOf="@+id/btn_sitegov"
        tools:layout_editor_absoluteY="214dp" />

</androidx.constraintlayout.widget.ConstraintLayout>